<Window x:Class="HotelApp.Desktop.CheckInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelApp.Desktop"
        mc:Ignorable="d" FontSize="20" FontFamily="Segoe UI"
        Title="CheckInWindow" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="#f5f5f5" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Card Container -->
        <Border Background="White" CornerRadius="12" Padding="25" MaxWidth="450" HorizontalAlignment="Center"
            VerticalAlignment="Top" BorderBrush="#ddd" BorderThickness="1" 
            >
            <StackPanel>

                <!-- Reservation Info -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Foreground="#333">Reservation:</TextBlock>
                    <TextBlock x:Name="firstNameText" Foreground="#555"/>
                    <TextBlock x:Name="lastNameText" Foreground="#555"/>
                </StackPanel>

                <!-- Room Title -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Foreground="#333">Room:</TextBlock>
                    <TextBlock x:Name="titleText" Foreground="#555"/>
                </StackPanel>

                <!-- Room Number -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Foreground="#333">Room Number:</TextBlock>
                    <TextBlock x:Name="RoomNumberText" Foreground="#555"/>
                </StackPanel>

                <!-- Total Cost -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Foreground="#333">Total Cost:</TextBlock>
                    <TextBlock x:Name="totalCostText" Foreground="#555"/>
                </StackPanel>

                <!-- Confirm Button -->
                <Button x:Name="confirmCheckIn" Content="Confirm Check-In"
                    Padding="10 0 10 0" Height="40" Margin="0 10 0 0"
                    Background="#28a745" Foreground="White" FontWeight="Bold"
                    BorderThickness="0" Click="confirmCheckIn_Click"/>
            </StackPanel>
        </Border>
    </Grid>

</Window>
